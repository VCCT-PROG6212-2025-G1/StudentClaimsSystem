<UserControl x:Class="StudentClaimsSystem.Views.SubmitClaimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Submit Claim" FontSize="28" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,20"/>

        <ComboBox Grid.Row="1" ItemsSource="{Binding Modules}" 
                  DisplayMemberPath="Name" SelectedItem="{Binding SelectedModule}" 
                  Width="400" Height="35" Margin="0,10" HorizontalAlignment="Left"/>

        <TextBox Grid.Row="2" Text="{Binding HoursClaimed, UpdateSourceTrigger=PropertyChanged}" 
                 Width="400" Height="35" Margin="0,10" HorizontalAlignment="Left">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Text" Value="Hours Claimed"/>
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Text" Value="{Binding HoursClaimed}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBox Grid.Row="3" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                 Width="500" Height="100" Margin="0,10" AcceptsReturn="True" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20">
            <Button Content="Upload Document" Command="{Binding UploadFileCommand}" Width="150" Height="35"/>
            <TextBlock Text="{Binding FileName}" Margin="20,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <Button Grid.Row="5" Content="Submit Claim" Command="{Binding SubmitCommand}" 
                Width="200" Height="50" FontSize="16" Background="Green" Foreground="White"/>
    </Grid>
</UserControl>