<UserControl x:Class="StudentClaimsSystem.Views.SubmitClaimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <StackPanel>
            <ComboBox ItemsSource="{Binding Modules}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedModule}"/>
            <TextBox Text="{Binding HoursClaimed}"/>
            <TextBox Text="{Binding Description}" Height="100"/>
            <Button Content="Choose File" Command="{Binding UploadFileCommand}"/>
            <TextBlock Text="{Binding FileName}"/>
            <Button Content="Submit Claim" Command="{Binding SubmitCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
